= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :due_date
    = f.date_select :due_date
  .field
    = f.label :date_paid
    = f.date_select :date_paid
  .field
    = f.label :or_number
    = f.number_field :or_number
  .field
    = f.label :total_payment
    = f.text_field :total_payment
  .field
    = f.label :principal_amount
    = f.text_field :principal_amount
  .field
    = f.label :interest_amount
    = f.text_field :interest_amount
  .field
    = f.label :installment_penalty_amount
    = f.text_field :installment_penalty_amount
  .field
    = f.label :balance_penalty_amount
    = f.text_field :balance_penalty_amount
  .field
    = f.label :grand_total
    = f.text_field :grand_total
  .actions
    = f.submit 'Save'
