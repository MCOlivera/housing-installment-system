= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :due_date
    = f.date_select :due_date
  .field
    = f.label :date_paid
    = f.date_select :date_paid
  .field
    = f.label :or_number
    = f.number_field :or_number
  .field
    = f.label :total_payment
    = f.text_field :total_payment, :value => @loan.monthly_installment
  .field
    = f.hidden_field :loan_id, :value => @loan.id
  .actions
    = f.submit 'Save'
