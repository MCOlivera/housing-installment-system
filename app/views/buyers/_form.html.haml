        %td= f.text_field :nature3, :class => "form-control"
        %td= f.text_field :office_tel_no3, :class => "form-control"
    
    %table
      %tr
        %td Insurance
        %td
          .form-inline
            .form-group
              = f.text_field :insurance, :class => "form-control"
      %tr
        %td Coverage Amount
        %td
          .form-inline
            .form-group
              = f.number_field :coverage_amount, :class => "form-control"
  
  %fieldset
    %legend Spouse
    %table
      %tr
        %td Full Name
        %td
