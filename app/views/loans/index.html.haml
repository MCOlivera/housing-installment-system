%h1 Listing loans

%table.table.table-striped
  %thead
    %tr
      %th TCT
      %th Subdivision name
      %th Block
      %th Lot
      %th Lot area
      %th Floor area
      %th Purchase price
      %th Monthly installment
      %th Interest rate
      %th Fully Paid?
      %th
      %th
      %th

  %tbody
    - @loans.each do |loan|
      %tr
        %td= loan.TCT
        %td= loan.subdivision_name
        %td= loan.block
        %td= loan.lot
        %td= loan.lot_area
        %td= loan.floor_area
        %td= loan.purchase_price
        %td= loan.monthly_installment
        %td= loan.interest_rate
        %td= loan.is_fully_paid
        %td= link_to 'View Payments', view_payment_path("payment" => { :loan_id => loan.id })
        - if !loan.is_fully_paid
          %td= link_to 'Add Payment', new_payment_path("payment" => { :loan_id => loan.id })
        - else
          %td

%br

= link_to 'New Loan', new_loan_path
