.forms
  .login
    = form_for :session, url: login_path, :html => { :class => 'form-horizontal' } do |f|
      = field_set_tag 'Log In'
      .form-group
        = f.label :username, :class => 'control-label col-sm-2'
        .col-sm-10
          = f.text_field :username, :class => 'form-control'

      .form-group
        = f.label :password, :class => 'control-label col-sm-2'
        .col-sm-10  
          = f.password_field :password, :class => 'form-control'
  
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit 'Log In', :class => 'btn btn-default'